# Playwright base image (includes Chromium + deps)
FROM mcr.microsoft.com/playwright:v1.41.2-jammy

WORKDIR /app

# Install aria2 + curl
RUN apt-get update && apt-get install -y aria2 curl && rm -rf /var/lib/apt/lists/*

COPY package.json package-lock.json* ./
RUN npm ci

COPY . .

RUN npm run build

CMD ["npm", "run", "worker"]
